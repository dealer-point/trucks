div#page_content
    div#page_heading(data-uk-sticky="{ top: 48, media: 960 }")
        div(style="width: 400px; float: right;")
            div.uk-input-group
                span.uk-input-group-addon
                    .i.material-icons &#xE8B6;
                label Search
                input.md-input(type="text" md-input)
        h1 Issue Tracker
        span.uk-text-upper.uk-text-small
            a(href="#"){{project_name}}
    div#page_content_inner
        div.md-card
            div.md-card-content
                div.uk-overflow-container.uk-margin-bottom
                    table#ts_issues.uk-table.uk-table-align-vertical.uk-table-nowrap.tablesorter.tablesorter-altair
                        thead
                            tr
                                th.uk-text-center Key
                                th Title
                                th Assignee
                                th Priority
                                th Created
                                th Updated
                                th Status
                        tfoot
                            tr
                                th.uk-text-center Key
                                th Title
                                th Assignee
                                th Priority
                                th Created
                                th Updated
                                th Status
                        tbody
                            //- on-last-repeat
                            tr(data-ng-repeat="issue in issues")
                                td.uk-text-center
                                    span.uk-text-small.uk-text-muted.uk-text-nowrap
                                        span(data-ng-bind="issue.short_name")
                                        | -
                                        span(data-ng-bind="issue.item_id")
                                td
                                    a(data-ui-sref="restricted.pages.issues.details({ issueId: issue.item_id })" data-ng-bind="issue.title")
                                td(data-ng-bind="issue.assignee")
                                td ---
                                td.uk-text-small(data-ng-bind="issue.date_created")
                                td.uk-text-small(data-ng-bind="issue.date_updated")
                                td
                                    span.uk-badge.uk-badge-outline.uk-text-upper(data-ng-bind="issue.status")
