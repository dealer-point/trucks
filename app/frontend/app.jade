doctype html
html(class="page_loading" data-ng-app="trucksApp" document-events data-ng-class="{ 'page_loading': pageLoading, 'page_loaded': pageLoaded, 'app_initialized' : appInitialized && (!$state.is('login') && !$state.includes('error')) }" data-ng-click="onClick($event)" data-ng-keyup="onKeyUp($event)")
    head
        meta(charset="UTF-8")
        title= htmlWebpackPlugin.options.title
        link(href="http://fonts.googleapis.com/css?family=Roboto:400,300,500,700,400italic&amp;subset=latin" rel="stylesheet" media="all")
        link(href="http://fonts.googleapis.com/css?family=Source+Code+Pro:400,700" rel="stylesheet" media="all")

    body.default_theme(data-uk-observe data-ng-class="{ 'sidebar_main_active' : primarySidebarActive, 'sidebar_main_open' : primarySidebarOpen, 'header_double_height': headerDoubleHeightActive, 'uk-height-1-1': page_full_height }")
        #page_preloader(data-ng-hide="hidePreloader")
            img(src=require("./assets/template/images/page_preloader.gif") alt="")

        div(ui-view="main_header")
        div(ui-view id="main_view" ng-class="{'uk-height-1-1': page_full_height }")
        div(ui-view="main_sidebar")

        script(src="built/template/js/common.min.js")
        script(src="built/template/js/uikit_custom.min.js")
        script(src="built/template/js/angular_common.min.js")
